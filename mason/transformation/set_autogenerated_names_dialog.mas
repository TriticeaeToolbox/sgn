<%args>

$programs

</%args>

<& /util/import_javascript.mas, classes => ['CXGN.TrialTreeFolders'] &>


<div class="modal fade" id="set_autogenerated_names_dialog" name="set_autogenerated_names_dialog" tabindex="-1" role="dialog" aria-labelledby="setAutogeneratedNamesDialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="setAutogeneratedNamesDialog">Set Autogenerated Names</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form class="form-horizontal" id="create_new_identifier_form" name="create_new_identifier_form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Autogenerated Names ID: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="autogenerated_names_id" name="autogenerated_names_id" type="text" placeholder="Used as ID for this set up"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Breeding Program: </label>
                            <div class="col-sm-9">
                                <select class="form-control" id="autogenerated_names_program" name="autogenerated_names_program">
                                    <option value="">Select Breeding Program</option>
<%perl>
foreach my $program (@$programs) {
if (@$program[3]) {
print "<option selected=\"selected\" value='".@$program[0]."'>".@$program[1]."</option>";
} else {
print "<option value='".@$program[0]."'>".@$program[1]."</option>";
}
}
</%perl>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Prefix: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="autogeneraed_name_prefix" name="autogenerated_name_prefix" type="text" placeholder="For example: BTI"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Number of digits: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="autogenerated_name_num_digits" name="autogenerated_name_num_digits" type="number" placeholder="For example: 4. The first name would be BTI0001"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Starting Serial Number: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="starting_serial_number" name="starting_serial_number" type="number" placeholder="For example: 1. The next name would be BTI0001"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Description: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="autogenerated_names_description" name="autogenerated_names_description" type="text" placeholder="Optional" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="new_identifier_submit_button">Submit</button>
            </div>
        </div>
    </div>
</div>


<script>

jQuery(document).ready(function(){

    jQuery('#set_autogenerated_names_link').click(function() {
        jQuery("#set_autogenerated_names_dialog").modal("show");
    });

});

</script>
