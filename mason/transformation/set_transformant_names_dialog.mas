<%args>

$breeding_program_id
$trial_id
$autogenerated_name_prefixes => ()

</%args>

<& /util/import_javascript.mas, classes => [] &>


<div class="modal fade" id="set_autogenerated_names_dialog" name="set_autogenerated_names_dialog" tabindex="-1" role="dialog" aria-labelledby="setAutogeneratedNamesDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="setAutogeneratedNamesDialog">Set Autogenerated Names for Transformants in this Project</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form class="form-horizontal" id="set_autogenerated_names_form" name="set_autogenerated_names_form">
                        <div class="form-group">
                            <label class="col-sm-5 control-label">Select a Prefix: </label>
                            <div class="col-sm-7">
% if ($autogenerated_name_prefixes) {
                                <select id="prefix_select">
                                    <option value="">Please select a prefix</option>
% foreach my $prefix(@$autogenerated_name_prefixes){
                                    <option value="<%$prefix%>"><%$prefix%></option>
% }
                                </select>
% }
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="set_autogenerated_names_button">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="set_autogenerated_names_saved_dialog_message" name="set_autogenerated_names_saved_dialog_message" tabindex="-1" role="dialog" aria-labelledby="setAutogeneratedNamesSavedDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="setAutogeneratedNamesSavedDialog">Success</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <p>
                        <span class="ui-icon ui-icon-circle-check" style="float: left; margin: 0 7px 50px 0;"></span>
                        Autogenerated name has been set for this project.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button id="dismiss_set_name_saved_dialog" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>

jQuery(document).ready(function(){

    jQuery('#set_autogenerated_names_link').click(function() {
        jQuery("#set_autogenerated_names_dialog").modal("show");
    });

    jQuery('#new_autogenerated_name_info_submit_button').click(function(){

        var breeding_program = jQuery('#autogenerated_name_program').val();
        if (!breeding_program) {
            alert("Breeding program is required");
            return;
        }

        var prefix = jQuery('#autogeneraed_name_prefix').val();
        if (!prefix) {
            alert("Prefix is required");
            return;
        }

        var current_serial_number = jQuery('#current_serial_number').val();
        if (!current_serial_number) {
            alert("Current serial number is required");
            return;
        }

        var number_of_digits = jQuery('#autogenerated_name_num_digits').val();

        var description = jQuery('#autogenerated_name_info_description').val();

        jQuery.ajax({
            url : '/ajax/transformation/add_autogenerated_name_info',
            type: 'POST',
            dataType: "json",
            data : {
                'breeding_program': breeding_program,
                'prefix': prefix,
                'number_of_digits': number_of_digits,
                'current_serial_number': current_serial_number,
                'description': description
            },
            success: function(response){
                console.log(response);
                if(response.error){
                    alert(response.error);
                }
                if (response.success == 1) {
                    jQuery('#add_autogenerated_name_info_dialog').modal('hide');
                    jQuery('#name_metadata_saved_dialog_message').modal("show");
                }
            },
            error: function(response){
                alert('Error submitting new autogenerated name info!');
            }
        });
    });

});

</script>
