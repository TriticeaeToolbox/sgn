<%args>

$programs => undef
$program_id => undef
$program_name => undef

</%args>

<& /util/import_javascript.mas, classes => ['CXGN.TrialTreeFolders'] &>


<div class="modal fade" id="add_autogenerated_name_info_dialog" name="add_autogenerated_name_info_dialog" tabindex="-1" role="dialog" aria-labelledby="addAutogeneratedNameInfoDialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addAutogeneratedNameInfoDialog">Add Autogenerated Name Information</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form class="form-horizontal" id="add_new_autogenerated_name_info_form" name="add_new_autogenerated_name_info_form">
% if ($programs) {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Breeding Program: </label>
                            <div class="col-sm-9">
                                <select class="form-control" id="autogenerated_name_program" name="autogenerated_name_program">
                                    <option value="">Select Breeding Program</option>
<%perl>
foreach my $program (@$programs) {
if (@$program[3]) {
print "<option selected=\"selected\" value='".@$program[0]."'>".@$program[1]."</option>";
} else {
print "<option value='".@$program[0]."'>".@$program[1]."</option>";
}
}
</%perl>
                                </select>
                            </div>
                        </div>
% } elsif ($program_name) {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Breeding Program: </label>
                            <div class="col-sm-9">
                                <select class="form-control" id="autogenerated_name_program" name="autogenerated_name_program">
                                    <option value="<%$program_id%>"><%$program_name%></option>
                                </select>
                            </div>
                        </div>
% }
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Prefix: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="autogeneraed_name_prefix" name="autogenerated_name_prefix" type="text" placeholder="Must be globally unique"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Last Serial Number: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="last_serial_number" name="last_serial_number" type="number" placeholder="For example: value 0. The next name would be BTI1"/>
                            </div>
                        </div>

                        <!--
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Number of digits: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="autogenerated_name_num_digits" name="autogenerated_name_num_digits" type="number" placeholder="For example: value 4. The name would be BTI0001"/>
                            </div>
                        </div>
                        -->

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Description: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="autogenerated_name_info_description" name="autogenerated_name_info_description" type="text" placeholder="Optional" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="new_autogenerated_name_info_submit_button">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="name_metadata_saved_dialog_message" name="name_metadata_saved_dialog_message" tabindex="-1" role="dialog" aria-labelledby="nameMetadataSavedDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="nameMetadataSavedDialog">Success</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <p>
                        <span class="ui-icon ui-icon-circle-check" style="float: left; margin: 0 7px 50px 0;"></span>
                        The new autogenerated name info saved successfully.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button id="dismiss_name_metadata_saved_dialog" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>

jQuery(document).ready(function(){

    jQuery("[name='add_autogenerated_name_info_link']").click(function(e) {
        e.preventDefault();
        jQuery("#add_autogenerated_name_info_dialog").modal("show");
    });

    jQuery('#new_autogenerated_name_info_submit_button').click(function(){

        var breeding_program = jQuery('#autogenerated_name_program').val();
        if (!breeding_program) {
            alert("Breeding program is required");
            return;
        }

        var prefix = jQuery('#autogeneraed_name_prefix').val();
        if (!prefix) {
            alert("Prefix is required");
            return;
        }

        var last_serial_number = jQuery('#last_serial_number').val();
        if (!last_serial_number) {
            alert("Last serial number is required");
            return;
        }

        var description = jQuery('#autogenerated_name_info_description').val();

        jQuery.ajax({
            url : '/ajax/transformation/add_autogenerated_name_info',
            type: 'POST',
            dataType: "json",
            data : {
                'breeding_program': breeding_program,
                'prefix': prefix,
                'last_serial_number': last_serial_number,
                'description': description
            },
            success: function(response){
                console.log(response);
                if(response.error){
                    alert(response.error);
                }
                if (response.success == 1) {
                    jQuery('#add_autogenerated_name_info_dialog').modal('hide');
                    jQuery('#name_metadata_saved_dialog_message').modal("show");
                }
            },
            error: function(response){
                alert('Error submitting new autogenerated name info!');
            }
        });
    });

    jQuery("#dismiss_name_metadata_saved_dialog").click(function(){
        location.reload();
    });


});

</script>
